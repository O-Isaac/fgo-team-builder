---
import Navegacion from '@components/shared/navegacion.astro';
import '@fontsource-variable/onest';

interface Props {
	title: string;
}

const { title } = Astro.props;
---

<!doctype html>
<html lang="en">
	<head>
		<meta charset="UTF-8" />
		<meta name="description" content="Astro description" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<meta name="generator" content={Astro.generator} />
		<title>{title} - Builder</title>
	</head>
	<body class="h-screen">
		<Navegacion />
		
		<section class="grid grid-cols-[30%,70%] h-full">
			<div class="bg-red-500 size-full">
				<slot name="menu" />
			</div>
			<div class="bg-blue-500 size-full">
				<slot />
			</div>
		</section>
	</body>
</html>

<style>
	body {
		font-family: 'Onest Variable', sans-serif;
	}
</style>